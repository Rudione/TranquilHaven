<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/introduction_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start "
        android:textSize="36sp"
        android:fontFamily="@font/incompleetaregularreveal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/introduction_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your smart"
        android:textSize="36sp"
        android:fontFamily="@font/incompleetaregularreveal"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/introduction_tv1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/introduction_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="future"
        android:textSize="36sp"
        android:fontFamily="@font/incompleetaregularreveal"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/introduction_tv2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/introduction_bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/blueButtonStyle"
        android:text="START >>>"
        android:textSize="18dp"
        android:elevation="50dp"
        app:layout_constraintTop_toBottomOf="@id/introduction_tv3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>