<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/reset_password_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/logo_black"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/palanquin_regular"/>

    <TextView
        android:id="@+id/reset_password_t2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We will send you the password reset link to your email"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_password_t1"
        android:textColor="@color/logo_black"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/palanquin_regular"/>

    <EditText
        android:id="@+id/reset_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/reset_password_t2"
        app:layout_constraintTop_toBottomOf="@id/reset_password_t2"
        app:layout_constraintEnd_toEndOf="@id/reset_password_t2"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reset_password_et"
        app:layout_constraintStart_toStartOf="@id/reset_password_et"
        app:layout_constraintTop_toBottomOf="@id/reset_password_et">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_password_bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/white_background"
            android:text="Cancel"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_password_bt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_background"
            android:text="Send"
            android:textAllCaps="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>