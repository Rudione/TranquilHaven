<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_register_graph"
    app:startDestination="@id/NavaccountOptionsFragment">

    <fragment
        android:id="@+id/NavintroductionFragment_nav"
        android:name="com.rudione.tranquilhaven.ui.fragments.loginregister.IntroductionFragment"
        android:label="NavIntroductionFragment"
        tools:layout="@layout/fragment_introduction">
        <action
            android:id="@+id/action_introductionFragment_to_accountOptionsFragment"
            app:destination="@id/NavaccountOptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/NavloginFragment"
        android:name="com.rudione.tranquilhaven.ui.fragments.loginregister.LoginFragment"
        android:label="NavLoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/NavregisterFragment_nav"
            app:popUpTo="@id/NavaccountOptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/NavregisterFragment_nav"
        android:name="com.rudione.tranquilhaven.ui.fragments.loginregister.RegisterFragment"
        android:label="NavRegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/NavloginFragment"
            app:popUpTo="@id/NavaccountOptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/NavaccountOptionsFragment"
        android:name="com.rudione.tranquilhaven.ui.fragments.loginregister.AccountOptionsFragment"
        android:label="NavAccountOptionsFragment"
        tools:layout="@layout/fragment_account_options">
        <action
            android:id="@+id/action_accountOptionsFragment_to_loginFragment"
            app:destination="@id/NavloginFragment" />
        <action
            android:id="@+id/action_accountOptionsFragment_to_registerFragment"
            app:destination="@id/NavregisterFragment_nav" />
    </fragment>
</navigation>